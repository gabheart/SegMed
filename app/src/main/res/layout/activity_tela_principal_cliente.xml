<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_seg_saude"
        android:padding="16dp"
        tools:context=".TelaPrincipalConsultor">

        <!-- Título -->
        <TextView
            android:id="@+id/titulo_planos_cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Escolha a operadora"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Idade -->
        <Spinner
            android:id="@+id/spinnerIdadeCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titulo_planos_cliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Operadora -->
        <Spinner
            android:id="@+id/spinnerOperadoraCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerIdadeCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Plano -->
        <Spinner
            android:id="@+id/spinnerPlanoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerOperadoraCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Acomodação -->
        <Spinner
            android:id="@+id/spinnerAcomodacaoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerPlanoCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Coparticipação -->
        <CheckBox
            android:id="@+id/checkCopartCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Com coparticipação"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerAcomodacaoCliente"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botão Buscar Planos -->
        <Button
            android:id="@+id/bt_buscar_planos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/checkCopartCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Container onde os cards de planos serão adicionados -->
        <LinearLayout
            android:id="@+id/containerTabelaCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/bt_buscar_planos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botão simples pra voltar -->
        <Button
            android:id="@+id/bt_voltar_cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/containerTabelaCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
